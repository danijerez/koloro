@inherits LayoutComponentBase


<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="overflow-x: hidden;">
    <NavMenu />
    @Body
</MudLayout>

@code {
    private MudTheme _theme = new();

    protected override void OnInitialized()
    {
        _theme = GenerateDarkTheme();
    }

    private MudTheme GenerateDarkTheme() =>
    new MudTheme
        {
            Palette = new PaletteDark()
            {
                Primary = "#657786", 
                Secondary = "#657786", 
                Tertiary = "#AAB8C2", 
                Black = "#14171A", 
                Background = "#657786", 
                BackgroundGrey = "#657786", 
                Surface = "#14171A",
                TextPrimary = "#FFFFFF", 
                TextSecondary = "#AAB8C2" 
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "JetBrains Mono" }
                }
            }
        };
}